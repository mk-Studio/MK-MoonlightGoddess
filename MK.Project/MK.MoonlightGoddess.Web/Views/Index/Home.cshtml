    <script>

        //调整iframe高度
        function reinitIframe() {
            var iframes = document.getElementsByName("iframe");
            try {
                for (var i = 0; i < iframes.length; i++)
                    //iframes[i].height = iframes[i].contentWindow.document.documentElement.scrollHeight;
                    iframes[i].height = window.screen.height - 320;
            } catch (ex) { }
        }
        
        var $, element;
        //添加tab
        var addTab = (id, title, url) => {
            //新增一个Tab项
            element.tabAdd('homeContentTabs', {
                title: title,
                content: '<iframe name="iframe" src="' + url + '" frameborder="0" style="width: 100%;"></iframe>',
                id: id
            });
            //增加点击关闭事件
            var r = $("#tabTitle").find("li");
            //每次新打开tab都是最后一个，所以只对最后一个tab添加点击关闭事件
            r.eq(r.length - 1).children("i.layui-tab-close").on("click", function () {
                element.tabDelete("homeContentTabs", $(this).parent("li").index());
            }), element.tabChange("homeContentTabs", r.length - 1);
            element.init();
        },
        //激活并添加tab，供于除本页面以外的所有子页面调用
        //调用示列：window.parent.activeTab("mingsn", "mingsn", "https://www.mingsn.xyz");
        activeTab = (id, title, url) => {
            var title = title;
            var tabs = $(".layui-tab-title").children();
            for (var i = 0; i < tabs.length; i++) {
                if ($(tabs[i]).html().substring(0, $(tabs[i]).html().indexOf("<")) === title) {
                    element.tabChange('homeContentTabs', id);
                    return;
                }
            }
            addTab(id, title, url);
            element.tabChange('homeContentTabs', id);
        }


        window.setInterval("reinitIframe()", 200);
        //JavaScript代码区域
        layui.use(['element','layer'], function () {
                $ = layui.jquery,
                element = layui.element; //Tab的切换功能，切换事件监听等，需要依赖element模块

            //触发事件
            var active = {
                tabAdd: function () {
                    addTab($(this).text(), $(this).text(), $(this).attr("url"));
                   
                },
                tabDelete: function (index) {
                    //删除指定Tab项
                    element.tabDelete('homeContentTabs', index); //删除（注意序号是从0开始计算）
                },
                tabChange: function (index) {
                    //切换到指定Tab项
                    element.tabChange('homeContentTabs', index); //切换（注意序号是从0开始计算）
                }
            };

            $("a[name='a']").on("click", function () {
                var title = $(this).text();
                var tabs = $(".layui-tab-title").children();
                for (var i = 0; i < tabs.length; i++) {
                    if ($(tabs[i]).html().substring(0, $(tabs[i]).html().indexOf("i") - 1) === title) {
                        element.tabChange('homeContentTabs', $(this).text());
                        return;
                    }
                }
                active["tabAdd"].call(this);
                active.tabChange($(this).text());
            });

            $("#exit").on("click", function () {
                layer.confirm('确认是否退出系统？', {
                    title:"退出系统",
                    skin: 'layui-layer-molv',
                    btn: ['确定', '取消'], //按钮
                    icon:3
                },
                    function () {
                        //确定...
                        $.get("/Index/Exit", {}, function () {
                            window.location.href = "/Login";
                        }, "html");
                    },
                    function () {
                        //取消...
                    });
            });
        });
    </script>
