        /*右键菜单*/
        .rightmenu {
            position: absolute;
            width: 110px;
            z-index: 9999;
            display: none;
            background-color: #fff;
            padding: 2px;
            color: #333;
            border: 1px solid #eee;
            border-radius: 2px;
            cursor: pointer;
        }

            .rightmenu li {
                text-align: center;
                display: block;
                height: 30px;
                line-height: 32px;
            }

                .rightmenu li:hover {
                    background-color: #666;
                    color: #fff;
                }
    </style>
</head>
<body class="layui-layout-body">
